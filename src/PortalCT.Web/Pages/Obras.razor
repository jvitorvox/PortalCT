@page "/obras"
@using Microsoft.AspNetCore.Authorization
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Obras - Portal Casa & Terra</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-hard-hat me-2"></i>
                    Painel de Obras
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active">Obras</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Cards de Estatísticas de Obras -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Obras Ativas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Obras Concluídas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">23</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Atrasos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">2</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Funcionários
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">145</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Obras em Andamento -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-hammer me-2"></i>
                        Obras em Andamento
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Projeto</th>
                                    <th>Localização</th>
                                    <th>Progresso</th>
                                    <th>Prazo</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>Residencial Jardim das Flores</strong>
                                        <br>
                                        <small class="text-muted">120 apartamentos</small>
                                    </td>
                                    <td>Setor Sul</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-success" style="width: 75%">75%</div>
                                        </div>
                                    </td>
                                    <td>Dez/2025</td>
                                    <td><span class="badge bg-success">No Prazo</span></td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Condomínio Vista Verde</strong>
                                        <br>
                                        <small class="text-muted">80 casas</small>
                                    </td>
                                    <td>Setor Norte</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-info" style="width: 45%">45%</div>
                                        </div>
                                    </td>
                                    <td>Mar/2026</td>
                                    <td><span class="badge bg-primary">Em Andamento</span></td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Edifício Comercial Centro</strong>
                                        <br>
                                        <small class="text-muted">15 andares</small>
                                    </td>
                                    <td>Centro</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-warning" style="width: 30%">30%</div>
                                        </div>
                                    </td>
                                    <td>Jun/2025</td>
                                    <td><span class="badge bg-warning">Atrasado</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informações Laterais -->
        <div class="col-lg-4 mb-4">
            <!-- Cronograma Semanal -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-calendar-week me-2"></i>
                        Cronograma Semanal
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div>
                                <strong>Segunda-feira</strong>
                                <br>
                                <small class="text-muted">Concretagem Torre A</small>
                            </div>
                            <span class="badge bg-primary">08:00</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div>
                                <strong>Terça-feira</strong>
                                <br>
                                <small class="text-muted">Instalação Elétrica</small>
                            </div>
                            <span class="badge bg-info">14:00</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div>
                                <strong>Quarta-feira</strong>
                                <br>
                                <small class="text-muted">Vistoria CREA</small>
                            </div>
                            <span class="badge bg-warning">10:00</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Equipamentos -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tools me-2"></i>
                        Status Equipamentos
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Guindastes</strong>
                                <br>
                                <small class="text-muted">5 unidades</small>
                            </div>
                            <span class="badge bg-success">Operacional</span>
                        </div>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Betoneiras</strong>
                                <br>
                                <small class="text-muted">8 unidades</small>
                            </div>
                            <span class="badge bg-success">Operacional</span>
                        </div>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Escavadeiras</strong>
                                <br>
                                <small class="text-muted">3 unidades</small>
                            </div>
                            <span class="badge bg-warning">Manutenção</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        // Carregar dados das obras
    }
}