                            <button class="btn btn-outline-success">
                                <i class="fas fa-download"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow">
                <img src="https://images.pexels.com/photos/323772/pexels-photo-323772.jpeg?auto=compress&cs=tinysrgb&w=400" class="card-img-top" alt="Vista Aérea" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h6 class="card-title">Vista Aérea</h6>
                    <p class="card-text">
                        <small class="text-muted">Complexo Residencial</small>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">Fachada</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary">
