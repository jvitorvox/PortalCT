@page "/galeria"
@using Microsoft.AspNetCore.Authorization
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Galeria - Portal Casa & Terra</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-images me-2"></i>
                    Galeria de Imagens
                </h2>
                <button class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Adicionar Imagens
                </button>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Projeto</label>
                            <select class="form-select">
                                <option value="">Todos</option>
                                <option value="jardim-flores">Residencial Jardim das Flores</option>
                                <option value="vista-verde">Condomínio Vista Verde</option>
                                <option value="comercial-centro">Edifício Comercial Centro</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Categoria</label>
                            <select class="form-select">
                                <option value="">Todas</option>
                                <option value="fachada">Fachada</option>
                                <option value="interior">Interior</option>
                                <option value="obra">Obra</option>
                                <option value="planta">Planta</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Buscar</label>
                            <input type="text" class="form-control" placeholder="Buscar imagens...">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-primary w-100">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Galeria de Imagens -->
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow">
                <img src="https://images.pexels.com/photos/323780/pexels-photo-323780.jpeg?auto=compress&cs=tinysrgb&w=400" class="card-img-top" alt="Fachada" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h6 class="card-title">Fachada Principal</h6>
                    <p class="card-text">
                        <small class="text-muted">Residencial Jardim das Flores</small>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">Fachada</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-outline-success">
                                <i class="fas fa-download"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow">
                <img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?auto=compress&cs=tinysrgb&w=400" class="card-img-top" alt="Interior" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h6 class="card-title">Sala de Estar</h6>
                    <p class="card-text">
                        <small class="text-muted">Apartamento Modelo</small>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-success">Interior</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-outline-success">
                                <i class="fas fa-download"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow">
                <img src="https://images.pexels.com/photos/1396122/pexels-photo-1396122.jpeg?auto=compress&cs=tinysrgb&w=400" class="card-img-top" alt="Obra" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h6 class="card-title">Construção Torre A</h6>
                    <p class="card-text">
                        <small class="text-muted">Progresso da Obra</small>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-warning">Obra</span>
