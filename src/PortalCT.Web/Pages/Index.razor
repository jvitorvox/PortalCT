@page "/"
@using PortalCT.Core.Interfaces
@inject IInformationRepository InformationRepository
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Dashboard - Portal Casa & Terra</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="dashboard-container">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                        Dashboard
                    </h1>
                    <p class="text-muted">Bem-vindo ao Portal Casa & Terra</p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center">
                            <div class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3">
                                <i class="fas fa-book"></i>
                            </div>
                            <h5 class="card-title">Biblioteca</h5>
                            <p class="card-text text-muted">Acesse livros e documentos</p>
                            <a href="/documentos" class="btn btn-outline-primary">Acessar</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center">
                            <div class="feature-icon bg-success bg-gradient text-white rounded-3 mb-3">
                                <i class="fas fa-cogs"></i>
                            </div>
                            <h5 class="card-title">Regras de Acionamento</h5>
                            <p class="card-text text-muted">Consulte procedimentos</p>
                            <a href="/acionamento" class="btn btn-outline-success">Acessar</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center">
                            <div class="feature-icon bg-info bg-gradient text-white rounded-3 mb-3">
                                <i class="fas fa-sitemap"></i>
                            </div>
                            <h5 class="card-title">Mapas de Processos</h5>
                            <p class="card-text text-muted">Visualize fluxos de trabalho</p>
                            <a href="/mapas-processos" class="btn btn-outline-info">Acessar</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center">
                            <div class="feature-icon bg-warning bg-gradient text-white rounded-3 mb-3">
                                <i class="fas fa-video"></i>
                            </div>
                            <h5 class="card-title">Vídeo Institucional</h5>
                            <p class="card-text text-muted">Conheça nossa empresa</p>
                            <a href="/videos" class="btn btn-outline-warning">Assistir</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="row">
                <!-- Informações -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Informações
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (informations?.Any() == true)
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var info in informations.Take(5))
                                    {
                                        <div class="list-group-item border-0 px-0 @GetPriorityClass(info.Priority)">
                                            <div class="d-flex align-items-start">
                                                <div class="priority-indicator me-3">
                                                    <i class="fas fa-circle @GetPriorityIconClass(info.Priority)"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="mb-1">@info.Content</p>
                                                    <small class="text-muted">
                                                        @info.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Nenhuma informação disponível</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Aniversariantes do Dia -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-birthday-cake me-2"></i>
                                Aniversariantes do Dia
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="fas fa-calendar-day fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Carregando aniversariantes...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Weather Widget -->
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-cloud-sun me-2"></i>
                                Clima - Brasília
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="fas fa-sun fa-3x text-warning mb-3"></i>
                                <h3>26°C</h3>
                                <p class="text-muted">Ensolarado</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cotações -->
                <div class="col-lg-6 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-line me-2"></i>
                                Cotações
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="border-end">
                                        <h6 class="text-muted">USD</h6>
                                        <span class="h5 text-success">R$ 5,12</span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border-end">
                                        <h6 class="text-muted">EUR</h6>
                                        <span class="h5 text-success">R$ 5,58</span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <h6 class="text-muted">BTC</h6>
                                    <span class="h5 text-warning">$42,350</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center py-5">
            <h3>Acesso Restrito</h3>
            <p>Você precisa estar logado para acessar o dashboard.</p>
            <a href="/login" class="btn btn-primary">
                <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
            </a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private IEnumerable<PortalCT.Core.Entities.Information>? informations;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            informations = await InformationRepository.GetActiveInformationsAsync();
        }
        catch (Exception ex)
        {
            // Log error
            informations = new List<PortalCT.Core.Entities.Information>();
        }
    }

    private string GetPriorityClass(string priority)
    {
        return priority?.ToLower() switch
        {
            "critica" => "border-start border-danger border-3",
            "alta" => "border-start border-warning border-3",
            "media" => "border-start border-info border-3",
            _ => "border-start border-secondary border-3"
        };
    }

    private string GetPriorityIconClass(string priority)
    {
        return priority?.ToLower() switch
        {
            "critica" => "text-danger",
            "alta" => "text-warning",
            "media" => "text-info",
            _ => "text-secondary"
        };
    }
}